<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/beijing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_shiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/lankuang"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/d1_anniu_shiming" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/lankuang"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/d1_anniu_renzheng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家认证"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jiesuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/lankuang"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/d1_anniu_jiesuan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结算账户"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <view.MyLinearLayoutItem
        android:id="@+id/view_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="false"
        app:leftImage="@mipmap/d1_tubiao_2tongji"
        app:leftImageVisibility="true"
        app:leftText="数据统计" />
    <view.MyLinearLayoutItem
        android:id="@+id/view_Merchant_balance"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="true"
        app:leftImage="@mipmap/d1_tubiao_3chongzhi"
        app:leftImageVisibility="true"
        app:leftText="商户余额" />
    <view.MyLinearLayoutItem
        android:id="@+id/view_Refund_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="false"
        app:leftImage="@mipmap/tuikdingdan"
        app:leftImageVisibility="true"
        app:leftText="退款订单" />

    <view.MyLinearLayoutItem
        android:id="@+id/view_news"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="true"
        app:leftImage="@mipmap/d1_tubiao_4xiaoxi"
        app:leftImageVisibility="true"
        app:leftText="消息中心" />
    <view.MyLinearLayoutItem
        android:id="@+id/view_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="true"
        app:leftImage="@mipmap/d1_tubiao_5dianpu"
        app:leftImageVisibility="true"
        app:leftText="店铺信息" />
    <view.MyLinearLayoutItem
        android:id="@+id/view_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLine="false"
        app:leftImage="@mipmap/d1_tubiao_6xinxi"
        app:leftImageVisibility="true"
        app:leftText="设置" />


    </LinearLayout>