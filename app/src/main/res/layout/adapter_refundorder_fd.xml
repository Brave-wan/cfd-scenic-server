<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e0e4ec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_dingdanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号" />

            <view.RoundImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/zhanwei" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="7"
                android:text="昵称" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@mipmap/zhanwei" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_commodityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="饭店套餐版"
                    android:textColor="@color/text_black" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="就餐时间"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray" />
                    <TextView
                        android:id="@+id/tv_jiucanshijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量：2"
                    android:textColor="@color/text_gray" />

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总额："
                        android:textColor="@color/text_black" />

                    <TextView
                        android:id="@+id/tv_zong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥750"
                        android:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@mipmap/xiangyoujiantou" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_daishenhe"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/bt_hong"
                android:layout_margin="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                android:text="待审核" />
            <TextView
                android:id="@+id/tv_yituikuan"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/huikuang"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="16sp"
                android:text="已退款" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e4ec" />
    </LinearLayout>
</LinearLayout>