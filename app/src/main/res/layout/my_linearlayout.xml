<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_myview"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/d1_tubiao_6xinxi"
            android:id="@+id/im_adapter_my_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="New Text"
            android:textColor="@color/text_black"
            android:id="@+id/tv_adapter_my_context" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/im_adapter_my_right"
            android:src="@mipmap/xiangyoujiantou"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_adapter_my_bottomline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eff2f7"/>
</LinearLayout>