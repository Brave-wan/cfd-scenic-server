<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e4ec" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_OrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:text="订单号" />

            <com.mytools.RoundImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/zhanwei" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="7"
                android:text="昵称" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:scaleType="fitXY"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:src="@mipmap/zhanwei" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_commodityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_black"
                    android:text="酒店版" />
                <TextView
                    android:id="@+id/tv_fangjianshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    android:text="房间数：1间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="入住："
                        />

                    <TextView
                        android:id="@+id/tv_ruzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:text="日期" />



                    <ImageView
                        android:id="@+id/iv_xiangyoujt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/xiangyoujiantou" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/text_gray"
                        android:text="离店：" />
                    <TextView
                        android:id="@+id/tv_lidian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:text="日期" />
                    <TextView
                        android:id="@+id/tv_jiwan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:textColor="@color/text_gray"
                        android:text="几晚" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:text="总额：" />
                    <TextView
                        android:id="@+id/tv_zong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥120"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#eff2f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_quxiao"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/bt_hongbian"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:gravity="center"
                android:text="取消订单" />
            <Button
                android:id="@+id/bt_yanzheng"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/bt_hong"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="验证审核" />
            <Button
                android:id="@+id/bt_wancheng"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/huikuang"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="16sp"
                android:text="交易完成" />
            <Button
                android:id="@+id/bt_guoqi"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="@mipmap/huikuang"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:text="已过期" />

            <TextView
                android:id="@+id/tv_daishenhe"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@mipmap/bt_hong"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="gone"
                android:text="待审核" />

            <TextView
                android:id="@+id/tv_yituikuan"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="@mipmap/huikuang"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:text="已退款" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e4ec" />
    </LinearLayout>
</LinearLayout>