<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e4ec" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_dingdanhao_danpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号" />

            <com.mytools.RoundImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/touxiang" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="7"
                android:text="昵称" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <com.mytools.NoScrollListView
            android:id="@+id/noscrolllistview"
            android:layout_width="match_parent"
            android:listSelector="#00000000"
            android:focusable="false"
            android:divider="@null"
            android:layout_height="wrap_content"></com.mytools.NoScrollListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@mipmap/bt_hongbian"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_yanzheng"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@mipmap/bt_hong"
                android:gravity="center"
                android:text="验证核销"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_wancheng"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@mipmap/huikuang"
                android:gravity="center"
                android:text="交易完成"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_guoqi"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@mipmap/huikuang"
                android:gravity="center"
                android:text="已过期"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e4ec" />
    </LinearLayout>
</LinearLayout>