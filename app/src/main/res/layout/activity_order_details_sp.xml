<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <view.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_centerTv="订单详情"
        app:tb_leftImClick="true"
        app:tb_leftImVisibility="true"
        app:tb_rightTvVisibility="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_OrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单号" />

                    <view.RoundImageView
                        android:id="@+id/iv_user"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/zhanwei" />

                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLength="7"
                        android:text="" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="#eff2f7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <view.MyListView
                    android:id="@+id/lv_myListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></view.MyListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/bt_fahuo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_hong"
                        android:text="确认发货"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bt_yiwancheng"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:text="已完成"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/bt_yifahuo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:text="已发货"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_bohui"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_lan"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="驳回申请"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_tongguo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:background="@mipmap/bt_hong"
                        android:gravity="center"
                        android:text="审核通过"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_tuikuan"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_lan"
                        android:gravity="center"
                        android:text="确认退款"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_yibohui"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="已驳回"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_yituikuan"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="已退款"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_querenshouhuo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_lan"
                        android:gravity="center"
                        android:text="确认收货"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />
                    <TextView
                        android:id="@+id/tv_daifahuo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="待发货"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e4ec" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:text="订单信息"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e4ec" />

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/chengse_dingwei" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_shouhuoren"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/tv_dizhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/text_gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_shoujihao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text=" "
                            android:textColor="@color/text_black" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e0e4ec" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_chuangjianshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="创建时间："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_fukuanshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="付款时间："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_zhifufangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="支付方式："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_shuliang2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="数量："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_peisongfangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="配送方式："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_peisong2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="配送费："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_zong2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="总额："
                    android:textColor="@color/text_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="物流信息"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e4ec" />

                <TextView
                    android:id="@+id/tv_gongsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="快递公司" />

                <TextView
                    android:id="@+id/tv_bianhao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="运单编号" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>