<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <view.MyTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_centerTv="订单详情"
        app:tb_leftImClick="true"
        app:tb_leftImVisibility="true"
        app:tb_rightTvVisibility="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_OrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="订单号"
                        android:textColor="@color/text_black" />

                    <com.mytools.RoundImageView
                        android:id="@+id/iv_touxiang"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/zhanwei" />

                    <TextView
                        android:id="@+id/tv_userName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLength="7"
                        android:text="昵称" />

                </LinearLayout>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:layout_margin="10dp"
                        android:src="@mipmap/zhanwei" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_commodityName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="饭店套餐版"
                            android:textColor="@color/text_black" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="就餐时间"
                                android:textColor="@color/text_gray" />
                            <TextView
                                android:id="@+id/tv_jiucanshijian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总额"
                                android:textColor="@color/text_black" />

                            <TextView
                                android:id="@+id/tv_zong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥120"
                                android:textColor="@color/red" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eff2f7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_quxiao"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_hongbian"
                        android:gravity="center"
                        android:text="取消订单"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/bt_yanzheng"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_hong"
                        android:gravity="center"
                        android:text="验证审核"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/bt_wancheng"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="交易完成"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bt_guoqi"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="已过期"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bt_tongguo"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/bt_hong"
                        android:gravity="center"
                        android:text="审核通过"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/bt_tuikuan"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:background="@mipmap/huikuang"
                        android:gravity="center"
                        android:text="已退款"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e4ec" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:text="订单详情"
                    android:textColor="@color/text_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e0e4ec" />

                <TextView
                    android:id="@+id/tv_chuangjianshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="创建时间："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_fukuanshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="付款时间："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_zhifufangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="支付方式："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="数量："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_jiucanshijian2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="就餐时间："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="联系电话："
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/tv_zong2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="总额："
                    android:textColor="@color/text_gray" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="套餐内容："/>
                    <LinearLayout
                        android:id="@+id/ll_add"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_taochanneirong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_gray"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>