<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_OrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号" />

            <view.RoundImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/zhanwei" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLength="7"
                android:text="昵称" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff2f7" />

        <com.mytools.NoScrollListView
            android:id="@+id/lv_listViewSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">

        </com.mytools.NoScrollListView>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bt_fahuo"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/bt_hong"
                    android:gravity="center"
                    android:text="确认发货"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/bt_yiwancheng"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/huikuang"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/bt_yifahuo"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/huikuang"
                    android:gravity="center"
                    android:text="已发货"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_bohui"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/bt_lan"
                    android:gravity="center"
                    android:text="驳回申请"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_tongguo"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/bt_hong"
                    android:gravity="center"
                    android:text="审核通过"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_tuikuan"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/bt_lan"
                    android:gravity="center"
                    android:text="确认退款"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_yibohui"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/huikuang"
                    android:gravity="center"
                    android:text="已驳回"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_yituikuan"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:background="@mipmap/huikuang"
                    android:gravity="center"
                    android:text="已退款"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e4ec" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>